@{
    ViewData["Title"] = "CRUD using the API";
}
<p></p>
<div id="services">
    <p></p>
    <div class="container">

        <h2>Staff CRUD</h2>

        <div class="row">
            <div class="col-md-2, col-lg-6">

                <h3>Add a Staff Member</h3>
                <br />
                <form action="javascript:void(0);" method="POST" onsubmit="addItem()">
                    <input class="form-control" type="text" id="add-name" placeholder="Add Name">
                    <input class="form-control" type="text" id="add-department" placeholder="AddDepartment">
                    <input type="submit" value="Add">
                </form>
                <hr />
                <h3>Edit a Staff Member</h3>
                <form class="my-form">
                    <input type="hidden" id="edit-id">
                    <input class="form-control" type="text" id="edit-name">
                    <input class="form-control" type="text" id="edit-department">
                    <input type="submit" value="Save">
                </form>
                <hr />
            </div>
            @*<div class="col-md-2, col-lg-2">*@


            <table class="table table-striped table-hover">
                <tr>
                    <th>Name</th>
                    <th>Department</th>
                    <th></th>
                    <th></th>
                </tr>
                <tbody id="allStaff"></tbody>
            </table>
            <p id="counter"></p>
        </div>
    </div>

</div>

@*</div>*@

@section Scripts {

    <script src="~/js/staffnamesapi.js"></script>
}
